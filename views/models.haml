- stati = @models.map{|m| "#{m.id}" if m.status !~ /Completed|Error/}.compact
- stati_to_check = stati.length > 0 ? stati.join(", ") : stati = 0 
:javascript
  $(function() {
    if(#{stati != 0}) { 
      setTimeout('checkStati("#{stati_to_check}", "")',5000);
    }
    var reload_validation = true;
  });

